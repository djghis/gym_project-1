<div class="index">
<h1>ALL BOOKINGS</h1>

  <div class="workout-container">
    <% @bookings.each do |booking| %>
    <div class="index-table">
      <p><b>Member:</b> <a href="/members/<%= booking.members.id%>"><%=  booking.members.first_name %> <%= booking.members.last_name %></a></p>
      <p><b>Workout:</b> <%= booking.workouts.name %></p>
      <p><b>Day:</b> <%= booking.workouts.day_of_week %></p>
      <p><b>Time:</b> <%= booking.workouts.start_time %> to <%= booking.workouts.end_time %></p>

      <div class="index-buttons">
       <form method="post" action="/bookings/<%= booking.id %>/delete" >
         <input type="submit" value="Delete Booking">
       </form>
      <hr />
      </div>
    </div>
    <% end %>
  </div>
</div>
